{
  "compilerOptions": {
    "outDir": "dist",
    "target": "es2021",
    "declaration": false,
    "module": "commonjs",
    "strictNullChecks": true,
    "sourceMap": true,
    "baseUrl": "src",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "typeRoots": ["node_modules/@types", "types/app.d.ts"],
    "paths": {
      "pages": ["pages"],
      "modules": ["modules"],
      "api": ["api"],
      "types": ["types"]
    }
  }
}
